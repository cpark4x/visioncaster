// GitHub Codespaces Devcontainer Configuration
// Minimal template with Claude Code pre-installed
{
  "name": "project",

  // Base image: Python 3.11 on Debian Bookworm
  "image": "mcr.microsoft.com/devcontainers/python:1-3.11-bookworm",

  // Resource requirements
  "hostRequirements": {
    "cpus": 2,
    "memory": "8gb",
    "storage": "32gb"
  },

  // Development tools to install
  "features": {
    // Build tools
    "ghcr.io/jungaretti/features/make:1": {},
    "ghcr.io/jungaretti/features/vim:1": {},

    // Python package manager (fast, modern)
    "ghcr.io/devcontainers-extra/features/pipx-package:1": {
      "package": "uv",
      "version": "latest"
    },

    // Node.js for additional tooling
    "ghcr.io/devcontainers/features/node:1": {
      "nodeGypDependencies": true,
      "installYarnUsingApt": true,
      "version": "lts",
      "nvmVersion": "latest",
      "pnpmVersion": "latest"
    },

    // Claude Code CLI - The key tool!
    "ghcr.io/anthropics/devcontainer-features/claude-code:1": {},

    // GitHub CLI for Codespace management
    "ghcr.io/devcontainers/features/github-cli:1": {},

    // Docker-in-Docker (optional, remove if not needed)
    "ghcr.io/devcontainers/features/docker-in-docker:2": {}
  },

  // Ports to forward (uncomment and customize as needed)
  // "forwardPorts": [3000, 8000],

  // Port configuration (uncomment to use)
  // "portsAttributes": {
  //   "3000": {
  //     "label": "Frontend",
  //     "onAutoForward": "notify"
  //   },
  //   "8000": {
  //     "label": "API",
  //     "onAutoForward": "openBrowser"
  //   }
  // },

  // Run this script after container creation
  "postCreateCommand": "./.devcontainer/post-create.sh",

  // Named container for easier identification in Docker Desktop
  "runArgs": ["--name=project_devcontainer"],

  // VS Code customizations
  "customizations": {
    // GitHub Codespaces settings
    "codespaces": {
      "openFiles": [".devcontainer/POST_SETUP_README.md"]
    },

    // VS Code extensions to install
    "vscode": {
      "extensions": [
        // AI assistants
        "anthropic.claude-code",
        "GitHub.copilot",

        // GitHub integration
        "github.codespaces",

        // Python development
        "ms-python.python",
        "ms-python.debugpy",
        "charliermarsh.ruff",

        // General development
        "aaron-bond.better-comments",
        "bierner.markdown-mermaid",
        "bierner.markdown-preview-github-styles",
        "ms-vscode.makefile-tools",
        "tamasfe.even-better-toml",
        "streetsidesoftware.code-spell-checker"
      ]
    }
  },

  // Environment variables
  "containerEnv": {
    // Optimize uv cache location for performance
    // https://docs.astral.sh/uv/concepts/cache/#cache-directory
    "UV_CACHE_DIR": "${containerWorkspaceFolder}/../.cache/uv"
  }
}
